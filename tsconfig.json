{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@screens/*": [
        "screens/*"
      ],
      "@admin/*": [
        "screens/admin/*"
      ],
      "@auth/*": [
        "screens/auth/*"
      ],
      "@customer/*": [
        "screens/customer/*"
      ],
      "@navigation/*": [
        "navigation/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@service/*": [
        "service/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}